# AI邮件营销系统环境变量配置示例

# 数据库配置
GME_DATABASE_HOST=localhost
GME_DATABASE_PORT=3306
GME_DATABASE_USERNAME=root
GME_DATABASE_PASSWORD=your-database-password
GME_DATABASE_DBNAME=go_market_email

# Redis配置
GME_REDIS_HOST=localhost
GME_REDIS_PORT=6379
GME_REDIS_PASSWORD=your-redis-password

# SMTP邮件配置
GME_SMTP_HOST=smtp.partner.outlook.cn
GME_SMTP_PORT=587
GME_SMTP_USERNAME=your-email@outlook.com
GME_SMTP_PASSWORD=your-email-password
GME_SMTP_FROM_NAME=AI Marketing

# AI配置
GME_AI_OPENAI_API_KEY=your-openai-api-key
GME_AI_OPENAI_MODEL=gpt-4
GME_AI_OPENAI_BASE_URL=https://api.openai.com/v1

# 自定义AI API
GME_AI_CUSTOM_API_URL=https://your-custom-ai-api.com/generate
GME_AI_CUSTOM_API_HEADERS={"Authorization":"Bearer your-token"}

# 邮件发送配置
GME_EMAIL_BATCH_SIZE=25
GME_EMAIL_SEND_INTERVAL=60
GME_EMAIL_RETRY_TIMES=2

# 调度器配置
GME_SCHEDULER_CHECK_INTERVAL=60
GME_SCHEDULER_MAX_WORKERS=5

# 日志配置
GME_LOG_LEVEL=info
GME_LOG_RETENTION_DAYS=7
GME_LOG_FILE_PATH=./logs/app.log

# 认证配置
GME_AUTH_TOKEN=your-secret-token-here

# Webhook配置
GME_WEBHOOK_URL=https://your-webhook-endpoint.com/notify
GME_WEBHOOK_TIMEOUT=30

# 服务器配置
GME_SERVER_PORT=8080
GME_SERVER_MODE=release